<button id="deleteButton" class="delete-btn" style="background-color: #dc3545; color: #fff; padding: 5px 12px; border: none; border-radius: 3px; cursor: pointer; margin-right: 5px;">
    <i class="fas fa-trash"></i>
</button>

<form id="deleteForm" method="post" action="{{ path('app_usuarios_delete', {'id': usuario.id}) }}" style="display: none;" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ usuario.id) }}">
</form>

