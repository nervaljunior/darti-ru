     h1 {
        text-align: center;
        color: #333;
    }

    form {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        width: 100%;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    table, th, td {
        border: 1px solid #ddd;
        text-align: left;
    }

    th, td {
        padding: 10px;
    }

    th {
        background-color: #007bff;
        color: #fff;
    }
    
    input,
    select {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        box-sizing: border-box;
    }

    button {
        background-color: #007bff;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    button:hover {
        background-color: #0056b3;
    } 


</style>
<h1>Usuarios index</h1>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                {#<th>Id</th>#}
                <th>Nome</th>
                <th>Email</th>
                <th>Telefone</th>
                <th>Tipo</th>
                {#<th>Password</th>#}
                {#<th>Tipo</th>#}
                {#<th>IsVerified</th>#}
                {% if is_granted('ROLE_ADMIN')%}
                <th>Ações</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for usuario in usuarios %}
            <tr>
                {#<td>{{ usuario.id }}</td>#}
                <td>{{ usuario.nome }}</td>
                <td>{{ usuario.email }}</td>
                <td>{{ usuario.telefone }}</td>
                <td>{{ usuario.roles ? usuario.roles | map(role => role | replace({'ROLE_': ''})) | join(', ') : '' }}</td>
                {#<td>{{ usuario.password }}</td>#}
                {#<td>{{ usuario.tipo }}</td>#}
                {#<td>{{ usuario.isVerified ? 'Yes' : 'No' }}</td>#}
                {% if is_granted('ROLE_ADMIN')%}
                <td>
                    <a href="{{ path('app_usuarios_show', {'id': usuario.id}) }}" class="btn btn-info">Show</a>
                    <a href="{{ path('app_usuarios_edit', {'id': usuario.id}) }}" class="btn btn-warning">Edit</a>
                </td>
                {% endif %}
            </tr>
            {% else %}
            <tr>
                <td colspan="9">No records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    
    {% if is_granted('ROLE_ADMIN')%}
    <a href="{{ '/register' }}" class="btn btn-success">Create new</a>
    {% endif %}
{% endblock %}
