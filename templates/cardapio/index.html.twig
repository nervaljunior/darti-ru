    <h1>Cardapio index</h1>
    <a href="{{ path('app_cardapio_new') }}" class="btn btn-success"> <i class="fas fa-plus"></i>Create new</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                {#<th>Alimento</th>#}
                <th>Data</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cardapio in cardapios %}
            <tr>
                <td>{{ cardapio.id }}</td>
                {#<td>{{ cardapio.id_alimento is not null ? cardapio.id_alimento.nome : 'N/A' }}</td>#}
                <td>{{ cardapio.data ? cardapio.data|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('app_cardapio_show', {'id': cardapio.id}) }}"><i class="fas fa-eye"></i></a>
                    <div>
                        <br>
                    </div>
                    <a class="edit-btn" href="{{ path('app_cardapio_edit', {'id': cardapio.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
