{% extends 'base.html.twig' %}

{% block title %}Unidade index{% endblock %}

{% block body %}

<style>

    .edit-btn,
    .delete-btn,
    .evaluate-btn {
        background-color: #007bff;
        color: #fff;
        padding: 5px 10px;
        border: none;
        border-radius: 3px;
        cursor: pointer;
        margin-right: 5px;
    }

    .edit-btn:hover,
    .delete-btn:hover,
    .evaluate-btn:hover {
        background-color: #0056b3;
    }

    .evaluate-dialog {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        padding: 20px;
        background-color: #fff;
        z-index: 999;
    }

    .evaluate-dialog textarea {
        width: 100%;
        height: 100px;
        box-sizing: border-box;
    }

    .evaluate-dialog button {
        background-color: #007bff;
        color: #fff;
        padding: 5px 10px;
        border: none;
        border-radius: 3px;
        cursor: pointer;
    }

    .evaluate-dialog button:hover {
        background-color: #0056b3;
    }

