

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
        background-color: #f4f4f4;
        background-image: linear-gradient(45deg, blue, cyan);
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .login {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        max-width: 300px; /* Largura máxima do contêiner */
        width: 100%;
        margin: auto; /* Centraliza o contêiner */
    }

    h1 {
        margin-bottom: 20px;
    }

    input {
        width: calc(100% - 20px); /* Adiciona um pouco de espaço para o campo de entrada */
        padding: 10px;
        margin-bottom: 15px;
        box-sizing: border-box;
    }

    button {
        background-color: #007bff;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    button:hover {
        background-color: #0056b3; /* Tom mais escuro ao passar o mouse */
    }

    .forgot-password {
        margin-top: 10px;
        font-size: 14px;
        color: #333;
    }

    .google-login {
        margin-top: 15px;
        font-size: 14px;
        color: #333;
    }

    .google-login a {
        color: #007bff;
        text-decoration: none;
    }

    .google-login a:hover {
        text-decoration: underline;
    }

    .material-icons {
        vertical-align: middle;
    }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code><a href="{{ 'D:/2_PESQUISAS/DARTi/darti-ru/src/Controller/LoginController.php'|file_link(0) }}">src/Controller/LoginController.php</a></code></li>
        <li>Your template at <code><a href="{{ 'D:/2_PESQUISAS/DARTi/darti-ru/templates/login/index.html.twig'|file_link(0) }}">templates/login/index.html.twig</a></code></li>
        
    </ul>
</div>

<div class="container">
    
{% if erro %}
<div>

{{erro.messageKey|trans(erro.messageData,'security')}}

</div>

<div class="col-lg-4 offset-lg-4 jumbotron">
<div class="login">
<h1>Login</h1>
{% endif %}
<form action="{{ path('app_login')}}" method="post">
    <div class="form-group">
        <label>Email</label>
        <input type="email" name="_username" class="form-control" value="{{lastUsername}}">
    </div>
    <div class="form-group">
        <label>Senha</label>
        <input type="password" name="_password" class="form-control">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Entrar</button>
    </div>

    <div class="forgot-password">
        <a href="{{path('app_recuperar_senha')}}">Esqueceu a senha?</a>
    </div>
    <div class="google-login">
        <p>entre com <a href="#">Gmail <span class="material-icons">mail</span></a></p>
    </div>
</form>
</div>

</div>
</div>




{% endblock %}
